<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.quanmai.yiqu.ui.mys.handwork.MaterialWarehouseActivity">

    <include layout="@layout/common_title_view"></include>

    <!--发放详情-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@color/color_FF776D"
            />

        <TextView
            style="@style/TextView_style"
            android:layout_marginLeft="25dp"
            android:text="发放详情"
            android:textColor="@color/text_color_979797"
            />

        <include layout="@layout/view_cutting_line_bottom_1px"></include>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tvGrantCode"
            style="@style/TextView_style"
            android:layout_centerVertical="false"
            android:layout_marginRight="35dp"
            android:singleLine="false"
            android:textSize="17sp"
            tools:text="发放编码：2198239187"
            />

        <TextView
            android:id="@+id/tvGrantType"
            style="@style/TextView_style"
            android:layout_below="@+id/tvGrantCode"
            android:layout_centerVertical="false"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_979797"
            android:textSize="14sp"
            tools:text="袋子类型：可回收环保袋"
            />

        <TextView
            android:id="@+id/tvGrantNum"
            style="@style/TextView_style"
            android:layout_below="@+id/tvGrantType"
            android:layout_centerVertical="false"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_979797"
            android:textSize="14sp"
            tools:text="发放数量：30只"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/imgQRCode"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_qr_code"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgQRCode"
                android:layout_centerHorizontal="true"
                android:text="重扫"
                android:textColor="@color/text_color_default"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/view_cutting_line_1px"></include>


    <!--社区详情-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@color/color_02AFF3"
            />

        <TextView
            style="@style/TextView_style"
            android:layout_marginLeft="25dp"
            android:text="社区详情"
            android:textColor="@color/text_color_979797"
            />

        <include layout="@layout/view_cutting_line_bottom_1px"></include>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tvGrantCommunity"
            style="@style/TextView_style"
            android:layout_centerVertical="false"
            android:textSize="17sp"
            tools:text="发放小区：丽江花园"
            />

        <TextView
            android:id="@+id/tvGrantFrequency"
            style="@style/TextView_style"
            android:layout_below="@+id/tvGrantCommunity"
            android:layout_centerVertical="false"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_979797"
            android:textSize="14sp"
            tools:text="发放频率：按月发放"
            />

        <TextView
            android:id="@+id/tvGrantNumEachTime"
            style="@style/TextView_style"
            android:layout_below="@+id/tvGrantFrequency"
            android:layout_centerVertical="false"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_979797"
            android:textSize="14sp"
            tools:text="每次发放：30只"
            />

    </RelativeLayout>

    <include layout="@layout/view_cutting_line_1px"></include>

    <!--领取人信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@color/theme"
            />

        <TextView
            style="@style/TextView_style"
            android:layout_marginLeft="25dp"
            android:text="领取人信息"
            android:textColor="@color/text_color_979797"
            />

        <include layout="@layout/view_cutting_line_bottom_1px"></include>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llAddressChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/TextView_style"
            android:layout_gravity="start"
            android:text="住址"
            />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/TextView_style"
            android:layout_marginLeft="38.5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:hint="选择领取住房"
            android:singleLine="false"
            android:textColor="@color/text_color_B4B4B4"
            />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_right"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/text_color_cdcdcd"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/TextView_style"
            android:layout_gravity="start"
            android:text="姓名"
            />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38.5dp"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:hint="领取人姓名（必填）"
            android:singleLine="false"
            android:textColor="@color/text_color_default"
            android:textColorHint="@color/text_color_B4B4B4"
            android:textSize="16sp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/text_color_cdcdcd"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/TextView_style"
            android:layout_gravity="start"
            android:text="手机号"
            />

        <EditText
            android:id="@+id/editPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:hint="领取人电话（必填）"
            android:singleLine="false"
            android:textColor="@color/text_color_default"
            android:textColorHint="@color/text_color_B4B4B4"
            android:textSize="16sp"
            />
    </LinearLayout>

    <include layout="@layout/view_cutting_line_1px"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnConfirm"
            style="@style/Button_Style"
            android:layout_alignParentBottom="true"
            android:text="确认领取"
            />
    </RelativeLayout>
</LinearLayout>
