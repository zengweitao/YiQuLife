<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.quanmai.yiqu.ui.Around.ShowCouponDirectlyActivity">

    <RelativeLayout
        android:id="@+id/relativeBar"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/theme"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接出示此页面即可"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_transparent"
            android:onClick="finish"
            android:paddingLeft="15.5dp"
            android:paddingRight="15.5dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="@drawable/arrow_left_white" />

        <ImageView
            android:id="@+id/imageViewShare"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/around_show_coupon_share_bg"
            android:background="@drawable/bg_btn_transparent"
            android:layout_centerVertical="true"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            >
            <ImageView
                android:id="@+id/imageViewBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="C85芝士培根帕尼尼+醇豆浆（热）"
                android:textColor="#454545"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="￥10"
                android:textSize="14sp"
                android:textColor="#fe5246"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/textViewDateTime"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="有效期至2016年06月05日"
                    android:textSize="14sp"
                    android:textColor="#979797"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    />

                <ImageView
                    android:id="@+id/imageViewCollection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:background="@drawable/around_details_collection_none"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#cdcdcd"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠详情"
                android:textSize="15sp"
                android:textColor="#979797"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="本手机优惠券可以在有此产品供应的中国大陆肯德基餐厅使用，交通枢纽、旅游景区的餐厅以及精选餐厅除外，具体情况以餐厅公示为准。不适用于肯德基宅急送，修改无效。本优惠券有效期为2016年3月28日至6月5日，且仅限早餐时段(6:00-9:30)使用。请在点餐前出示本手机优惠券，产品和包装以餐厅实际供应为准。不可兑换现金，且不能与其他优惠同时使用。中国肯德基只认可肯德基优惠网(youhui.kfc.com.cn)、APP、微信等官方途径发布的手机优惠券，您从其他途径获得的手机优惠券将不能在肯德基餐厅使用，请您注意下载渠道。"
                android:textSize="14sp"
                android:textColor="#979797"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
