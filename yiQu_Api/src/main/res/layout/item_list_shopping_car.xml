<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96">
        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="废旧电池"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:textSize="@dimen/y30" />
        <TextView
            android:id="@+id/textview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10益币"
            android:textSize="@dimen/y30"
            android:textColor="@color/text_color_F5A623"
            android:layout_alignBaseline="@+id/textview_number"
            android:layout_alignBottom="@+id/textview_number"
            android:layout_toLeftOf="@+id/textview_number"
            android:layout_marginRight="@dimen/x34"/>
        <TextView
            android:id="@+id/textview_number"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y60"
            android:text="10"
            android:textSize="@dimen/y28"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x36"
            android:gravity="center"
            android:background="@drawable/bg_color_d9d9d9_wide_1px_radius_8px"/>

    </RelativeLayout>

</LinearLayout>