<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y160"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:id="@+id/relative_order_addess">
        <TextView
            android:id="@+id/textView_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y34"
            android:textSize="@dimen/y30"
            android:maxLength="4"
            android:ellipsize="middle"/>

        <TextView
            android:id="@+id/textView_order_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_order_name"
            android:layout_marginLeft="@dimen/x154"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/y30"/>


        <TextView
            android:id="@+id/textView_order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_order_phone"
            android:layout_below="@+id/textView_order_phone"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/y30"
            android:layout_marginTop="@dimen/y12"/>

        <TextView
            android:id="@+id/textView_order_mr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_order_name"
            android:layout_below="@+id/textView_order_name"
            android:layout_marginTop="@dimen/y12"
            android:background="@drawable/bg_color_e56d66_wide_1px_radius_4px"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="@dimen/y1"
            android:text="默认"
            android:textColor="@color/text_color_e56d66"
            android:textSize="@dimen/y24"
            android:gravity="center"/>

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y32"
            android:layout_alignBottom="@+id/textView_order_address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/ic_arrow_right"
            android:id="@+id/imageView_order_next" />

        <ImageView
            android:id="@+id/imageView_order_edit"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:background="@drawable/icon_edit"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView_order_next"
            android:layout_toStartOf="@+id/imageView_order_next"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>