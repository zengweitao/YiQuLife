<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:id="@+id/tvOrderStatus"
                style="@style/TextView_style"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="已回收"
                android:textColor="@color/text_color_default"
                />

            <TextView
                android:id="@+id/tvFinishedDate"
                style="@style/TextView_style"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/text_color_979797"
                tools:text="2016.04.22 10:30~12:30"
                />
        </LinearLayout>

        <include layout="@layout/view_cutting_line_1px"></include>

        <LinearLayout
            android:id="@+id/viewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="9dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/TextView_style"
                    android:text="预约收取时间"
                    android:textColor="@color/text_color_default"
                    />

                <TextView
                    android:id="@+id/tvAppointmentDate"
                    style="@style/TextView_style"
                    android:layout_marginLeft="108.5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_979797"
                    tools:text="2016.04.22 10:30~12:30"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    style="@style/TextView_style"
                    android:text="收取地址"
                    android:textColor="@color/text_color_default"
                    />

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/TextView_style"
                    android:layout_marginLeft="108.5dp"
                    android:layout_marginRight="18dp"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:textColor="@color/text_color_979797"
                    tools:text="广州市番禺区市桥桥南西路雅居乐城南原著8栋1103"
                    />

                <View
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_right"
                    >
                </View>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/TextView_style"
                    android:text="赠送益币"
                    android:textColor="@color/text_color_default"
                    />

                <TextView
                    android:id="@+id/tvGainPoint"
                    style="@style/TextView_style"
                    android:layout_marginLeft="108.5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_979797"
                    tools:text="90"
                    />
            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/view_cutting_line_1px"></include>

    </LinearLayout>
</RelativeLayout>