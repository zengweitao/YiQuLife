<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="318dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_radius_4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="住户二维码"
            android:textColor="@color/theme"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            tools:background="@drawable/qrcode"/>

        <TextView
            android:id="@+id/tvUserQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/text_color_default"
            android:textSize="14sp"
            tools:text="1234567890123456"/>

        <include layout="@layout/view_cutting_line_1px"></include>


        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_radius_4dp"
            android:text="关闭"
            android:textColor="@color/text_color_B5B5B5"
            android:textSize="17sp"/>
    </LinearLayout>

</RelativeLayout>