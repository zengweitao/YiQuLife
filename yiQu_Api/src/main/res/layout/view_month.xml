<?xml version="1.0" encoding="utf-8"?>
<com.quanmai.yiqu.ui.mys.record.view.QMonthView
    android:id="@+id/monthView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/lt_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#519116"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme"
            ></View>

        <com.quanmai.yiqu.ui.mys.record.view.QCalendarGridView
            android:id="@+id/calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <com.quanmai.yiqu.ui.mys.record.view.QCalendarRowView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/calendar_day_headers_paddingbottom">

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="一"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="二"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="三"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="四"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="五"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="六"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>

                <TextView
                    style="@style/CalendarCell.DayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="日"
                    android:textColor="@color/theme"
                    android:textSize="12sp"/>
            </com.quanmai.yiqu.ui.mys.record.view.QCalendarRowView>

            <include layout="@layout/view_week"/>

            <include layout="@layout/view_week"/>

            <include layout="@layout/view_week"/>

            <include layout="@layout/view_week"/>

            <include layout="@layout/view_week"/>

            <include layout="@layout/view_week"/>
        </com.quanmai.yiqu.ui.mys.record.view.QCalendarGridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d6d6d6"
            android:visibility="gone"/>

    </LinearLayout>


</com.quanmai.yiqu.ui.mys.record.view.QMonthView>