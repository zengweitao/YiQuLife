<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".ui.booking.RecycleSuccessActivity">

    <include layout="@layout/common_title_view" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llRecycle"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_recycle_success" />

            <TextView
                android:id="@+id/textViewHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="恭喜您，回收成功"
                android:textColor="#575757"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/llRecycleLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/bg_recycle_successd"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/theme"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>
