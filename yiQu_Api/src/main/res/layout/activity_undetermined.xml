<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
    android:orientation="vertical"
    tools:context="com.quanmai.yiqu.ui.mys.realname.UndeterminedActivity">

    <include layout="@layout/common_title_view"></include>

    <RelativeLayout
        style="@style/RelativeLayout_base_style"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tvName"
            style="@style/TextView_style"
            android:layout_centerVertical="false"
            android:maxWidth="70dp"
            tools:text="陆自力"
            />

        <TextView
            android:id="@+id/tvPhone"
            style="@style/TextView_style"
            android:layout_centerVertical="false"
            android:layout_marginLeft="70dp"
            tools:text="180****4635"
            />

        <TextView
            android:id="@+id/tvStatus"
            style="@style/TextView_style"
            android:layout_centerVertical="false"
            android:layout_toRightOf="@+id/tvPhone"
            android:textColor="@color/text_color_979797"
            tools:text="(待审核)"
            />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/TextView_style"
            android:layout_below="@+id/tvPhone"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:singleLine="false"
            android:textColor="@color/text_color_979797"
            tools:text="广东省海珠区江南新苑A03栋 4楼 401"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></View>

    <Button
        android:id="@+id/btnCancel"
        style="@style/Button_Confirm_style"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/theme"
        android:text="取消绑定"
        />

</LinearLayout>
