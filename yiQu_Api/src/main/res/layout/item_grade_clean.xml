<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.quanmai.yiqu.common.widget.CheckableRelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_gray_stroke_1px_radius_2dp">

        <TextView
            android:id="@+id/tvContent"
            style="@style/TextView_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:textColor="@color/text_color_979797"
            tools:text="垃圾桶内垃圾满溢"
            />

        <ImageView
            android:id="@+id/imgChecked"
            android:layout_width="13.5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_right_choice_text"
            android:visibility="gone"
            />
    </com.quanmai.yiqu.common.widget.CheckableRelativeLayout>


</RelativeLayout>