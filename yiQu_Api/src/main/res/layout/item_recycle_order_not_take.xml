<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tvAppointmentTime"
            style="@style/TextView_style"
            android:layout_centerVertical="false"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="start"
            android:singleLine="true"
            tools:text="预约收取时间  2016.04.18 08:00~12:00"
            />

        <include layout="@layout/view_cutting_line_1px"></include>

        <TextView
            android:id="@+id/tvAddress"
            style="@style/TextView_style"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:maxLines="3"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="false"
            tools:text="广州市番禺区市桥桥南西路雅居乐城南原著8栋1103"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/text_color_cdcdcd"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            >

            <com.quanmai.yiqu.common.widget.XCRoundImageView
                android:id="@+id/imgHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <TextView
                android:id="@+id/tvName"
                style="@style/TextView_style"
                android:layout_centerVertical="false"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="110dp"
                android:ellipsize="end"
                android:textSize="17sp"
                tools:text="小明"
                />


            <TextView
                android:id="@+id/tvPhone"
                style="@style/TextView_style"
                android:layout_centerVertical="false"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="110dp"
                android:layout_marginTop="23dp"
                android:singleLine="true"
                android:textColor="@color/text_color_4a90e2"
                tools:text="123456789"
                />
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:text="取消"
                android:textColor="@color/text_color_f08e1b"
                android:layout_toLeftOf="@+id/btnRecycle"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_color_f08e1b_wide_1px_radius_4px"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btnRecycle"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_btn_theme_color"
                android:text="去回收"
                android:textColor="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>