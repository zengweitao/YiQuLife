<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/coner_gray" >
    <TextView 
        android:id="@+id/device_name"
        android:singleLine="true"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/coner_white"
        android:text="富二代"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textSize="16sp"
        android:textColor="#81c146"/>
    <TextView 
        android:id="@+id/device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:text="地址：浙江省杭州市江干区天下会"
        android:textColor="#505059"
        android:textSize="13sp"/>
    <View 
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_height="0.5dp"
        android:background="#7c7c7c"
        android:layout_width="match_parent"/>
    <TextView 
        android:id="@+id/device_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="设备坐标：69，89"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#7c7c7c"
        android:textSize="12sp"
        android:singleLine="true"/>
</LinearLayout>
