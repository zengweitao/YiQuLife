<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:minHeight="190dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="17.5dp"
            android:paddingRight="17.5dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color_default"
                android:textSize="18sp"
                tools:text="Set Title" />

            <include layout="@layout/view_cutting_line_1px"></include>

            <LinearLayout
                android:id="@+id/linear_usercode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/get_bag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="扫码取袋/取纸"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/give_present"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="赠送礼品"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/scene_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="现场回收"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_user_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="获取用户信息"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_bagcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/inspection_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="巡检评分"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/sand_bag_of_hand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="手工发袋"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bag_put_in_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="物料入库"
                    android:textColor="@color/theme"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <!--<include layout="@layout/view_cutting_line_1px"></include>

